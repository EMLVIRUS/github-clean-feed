{
    "manifest_version": 2,
    "name": "GitHub Grouped News",
    "description": "Group news feed by repo",
    "version": "0.0.0",
    "author": "Federico Brigante",
    "permissions": [
        "https://github.com/*",
        "storage"
    ],
    "applications": {
        "gecko": {
            "id": "github-grouped-news@bfred.it",
            "strict_min_version": "45.0"
        }
    },
    "background": {
        "scripts": [
            "lib/optman.js",
            "options-init.js",
            "lib/enable-all-current-tabs.js"
        ]
    },
    "options_ui": {
        "chrome_style": true,
        "page": "options/index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/",
                "https://github.com/dashboard/index/*",
                "https://github.com/orgs/*/dashboard",
                "https://github.com/orgs/*/dashboard/index/*"
            ],
            "css": [
                "content.css"
            ],
            "js": [
                "lib/optman.js",
                "lib/optdom.js",
                "lib/object-like-map.js",
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}
